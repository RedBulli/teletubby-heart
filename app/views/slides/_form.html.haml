- action = if @slide.new_record? then "create" else "update" end
= simple_form_for(@slide, html:{class: "form-horizontal", :multipart => true}) do |f|
  = f.hidden_field "channel_redirect_id", value: @channel_redirect_id
  = f.input :type, :input_html => { :id => "typeDropDown" }, collection: [[t(:slide_type_web_page), "UrlSlide"],[t(:slide_type_image), "ImageSlide"],[t(:slide_type_youtube_video), "YoutubeSlide"],[t(:slide_type_custom_slide), "CustomSlide"]], as: :select, include_blank: false if @slide.new_record?
  %div{:id => "slideForm"}
    - if @slide.new_record?
      - @slide.type = "UrlSlide"
      = render partial: "url_slide"
    - elsif @slide.type == "UrlSlide"
      = render partial: "url_slide"
    - elsif @slide.type == "ImageSlide"
      = render partial: "image_slide"
    - elsif @slide.type == "YoutubeSlide"
      = render partial: "youtube_slide"
    - elsif @slide.type == "CustomSlide"
